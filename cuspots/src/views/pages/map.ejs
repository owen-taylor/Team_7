<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<main>
  <div class="container">
    <h1>Map page:</h1>
    <div id="map" style="width:500px;height:380px;"></div>
    <script>
      var map;
  
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {
            lat: 40.00790356892552,
            lng: -105.26975530161658
          },
          zoom: 16
        });
      }
      function changeMap(latInput, longInput){
        const latitude = parseFloat(latInput);
        const longitude = parseFloat(longInput);
        const location = { lat: latitude, lng: longitude };
        map = new google.maps.Map(document.getElementById('map'), {

          center: {
            lat: latitude,
            lng: longitude
          },
          zoom: 16
        });
        const marker = new google.maps.Marker({
          position: location,
          map: map,
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%=locals.key%>&callback=initMap" async defer>
    </script>
  </div>

  <!--Modal to add spot-->
  <div class="container">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      Add Spot
    </button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Spot</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/add_spot" method="POST">
              <div class="modal-body">
                <div class="input-group mb-3">
                  <span class="input-group-text">Spot Name</span>
                  <input name="spot_input" type="text" id="spot_input" class="form-control">
              </div>
              <div class="input-group mb-3">
                <span class="input-group-text">Rating</span>
                <input name="rating_input" type="text" id="rating_input" class="form-control">
              </div>
              <div class="input-group mb-3">
                  <span class="input-group-text">Latitude</span>
                  <input name="latitude_input" type="text" id="latitude_input" class="form-control">
              </div>
              <div class="input-group mb-3">
                <span class="input-group-text">Longitude</span>
                <input name="longitude_input" type="text" id="longitude_input" class="form-control">
              </div>
              </div>
              <div class="modal-footer">
                <button id="submit_button" class="btn btn-primary" type="submit">Create New Spot</button>
              </div>
          </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--List of spots-->
  <div class="container">
    <table class="table">
      <centre>
        <thead>
          <tr>
            <th scope="col">SPOT NAME</th>
            <th scope="col">AVERAGE RATING</th>
          </tr>
        </thead>
        <tbody>
            <%spots.forEach(function(spot){ %>
                <tr>
                    <td><%= spot.name %></td>
                    <td><%= spot.avg_rating %></td>
                    <td>
                      <button class="button btn-primary" onClick='changeMap("<%= spot.lat %>","<%= spot.long %>")'>View Location</button>
                    </td>
                </tr>
            <% }); %> 
        </tbody>
      </centre>
    </table>
    <div><%- include ('../partials/message') %></div>
  </div>
</main>

<%- include ('../partials/footer') %>