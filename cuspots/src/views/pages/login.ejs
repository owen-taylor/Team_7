<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<main>
    <div class="form">
      <h1>Login</h1>
      <form action="/login" method="POST">
          <div class="user">
            <label for="username" class="form-label">Username:</label>
            <input name="username" type="text" class="form-control" id="username" placeholder="Enter username" required />
          </div>
          <div class="pass">
              <label for="password" class="form-label">Password:</label>
              <input name="password" type="text" class="form-control" id="password" placeholder="Enter password" required />
          </div>
          <div class="button">
            <button id="Login" class="btn btn-primary" type="submit">Login</button>
          </div>
      </form>
      <a href="/register">Don't have an account?</a>
      <div><%- include ('../partials/message') %></div>
    </div>
</main>

<%- include ('../partials/footer') %>